<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bakery</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #fff5f8;
            font-family: 'Arial', sans-serif;
        }
        .navbar {
            background-color: #ffe6f2;
        }
        .navbar-brand {
            color: #ff66b2 !important;
        }
        .nav-link {
            color: #ff66b2 !important;
        }
        .nav-link:hover {
            text-decoration: underline;
        }
        footer {
            margin-top: 20px;
            background-color: #ffe6f2;
            padding: 10px;
            text-align: center;
        }
        footer p {
            color: #ff66b2;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <a class="navbar-brand" href="/">Bakery</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Recipe">Add Recipe</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/RecipeList">Recipe List</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main role="main" class="container" style="margin-top: 20px;">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2024 Bakery - All rights reserved</p>
    </footer>

    <!-- jQuery, Popper.js, and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.4.4/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
